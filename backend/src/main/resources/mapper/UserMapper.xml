<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.backend.mapper.UserMapper">
    
    <select id="findByEmailOrPhone" resultType="User">
        SELECT * FROM user WHERE email = #{emailOrPhone} OR phone = #{emailOrPhone}
    </select>
    
    <select id="findByEmail" resultType="User">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <select id="findByPhone" resultType="User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>
    
    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, email, phone, role)
        VALUES (#{username}, #{password}, #{email}, #{phone}, #{role})
    </insert>
</mapper> 